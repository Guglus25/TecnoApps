<!DOCTYPE html>
<html lang="en">
<head>
    @* Encabezado donde se ingresan metadatos y links para css *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TecnoApps</title>
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TecnoApps.styles.css" asp-append-version="true" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/bootstrap-5.3.3-dist/css/bootstrap.css" rel="stylesheet" />
    @* <link href="~/css/stylecontacto.css" rel="stylesheet" /> *@
    

</head>
<body>
    @* Menu de navegacion *@
    @Html.Partial("_Navigation")

    @* renderizar contenido de la pagina  *@
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @* pie de pagina footer *@
    @Html.Partial("_Footer")

    @* inyeccion de javascript *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/f76dcc0686.js" crossorigin="anonymous"></script>

    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>




